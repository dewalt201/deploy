upstream bitrix {
    server unix:/var/run/php5-fpm.sock;
}

server {
    listen 127.0.0.1:80;
    server_name 3dsattv.bitrix.dev;
    root /var/www/cms/3dsattv.bitrix.dev;

    server_name_in_redirect off;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    client_max_body_size 1024M;
    client_body_buffer_size 4M;

    location / {
        index index.php
        try_files $uri $uri/ @bitrix;
    }

    location ~ \.php$ {
        try_files $uri $uri/ @bitrix;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass bitrix;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PHP_VALUE "error_log=/var/log/nginx/error.log";
        fastcgi_connect_timeout 60;
        fastcgi_send_timeout 180;
        fastcgi_read_timeout 180;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
        fastcgi_intercept_errors on;
    }

    location @bitrix {
        include /etc/nginx/fastcgi_params;
        fastcgi_pass bitrix;
        fastcgi_param SCRIPT_FILENAME $document_root/bitrix/urlrewrite.php;
        fastcgi_param PHP_VALUE "mbstring.func_overload = 2 \n mbstring.internal_encoding = UTF-8";
    }

    location ^~ /bitrix/admin/ {
        index index.php;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass bitrix;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PHP_VALUE "mbstring.func_overload = 2 \n mbstring.internal_encoding = UTF-8";
    }

    location ~* ^.+\.(jpg|jpeg|JPEG|JPG|gif|png|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar)$ {
        access_log off;
        expires max;
        error_page 404 = /404.html;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location ~ (/\.ht|\.git|\.svn|/bitrix/modules|/upload/support/not_image|/bitrix/php_interface) {
        deny all;
    }

    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
